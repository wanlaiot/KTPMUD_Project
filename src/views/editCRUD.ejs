<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User Information</title>
    <!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

<!-- jQuery library -->
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>

<!-- Popper JS -->
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
         <div class="row"> 
            <div class="col-12 mt-3"><b>Edit user information</b></div>
            <form action="/put-crud" method="POST">
                <div class="form-group">
                  <label for="inputAddress">First name</label>
                  <input type="text" 
                  class="form-control" 
                  name="firstName" 
                  placeholder="Van An" value="<%= user.firstName %>" >
                </div>
                <div class="form-group">
                  <label for="inputAddress2">Last name</label>
                  <input type="text" class="form-control" name="lastName" placeholder="Nguyen"
                  value="<%= user.lastName %>">
                </div>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="inputCity">phone</label>
                    <input type="text" class="form-control" name="phone" value="<%= user.phone %>">
                  </div>
                  <div class="form-group col-md-3">
                    <label for="inputState">Active</label>
                    <select name="isactive" class="form-control">
                      <option value="1">isActive</option>
                      <option value="0">isNotActive</option>
                    </select>
                  </div>
                  <div class="form-group col-md-3">
                    <label for="inputZip">Role</label>
                    <input type="text" class="form-control" name="role" value="<%= user.role %>">
                  </div>
                </div>
                <input name="id" value="<%= user.id %>" type="text" hidden>
                <button type="submit" class="btn btn-primary">Update</button>
              </form>
         </div>
    </div>
</body>
</html>