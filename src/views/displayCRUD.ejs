<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Get CRUD</title>
    </head>
    <style>
        table,th,td{
            border:1px solid black;
            border-collapse:collapse;
        }
    </style>
    <body>
        <table style="width:100%">
          <tr>
              <th>Email</th>
              <th>Firstname</th>
              <th>Lastname</th>
              <th>phone</th>
              <th>role</th>
              <th>isActive</th>
              <th>Actions</th>
          </tr>
          
             <% for(let i=0;i < dataTable.length; i++) { %>
                <tr> 
             <td><%= dataTable[i].email %></td>
              <td><%= dataTable[i].firstName %></td>
              <td><%= dataTable[i].lastName %></td>
              <td><%= dataTable[i].phone %></td>
              <td><%= dataTable[i].role %></td>
              <td><%= dataTable[i].isActive %></td>
               <td>
                <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-edit" type="button">Edit</a>
                <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn-delete" type="button">Delete</a>
            </td>
             </tr>
            <% } %> 
         </table>
    </body>
    </html> 